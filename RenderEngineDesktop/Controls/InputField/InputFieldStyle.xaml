<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RenderEngineDesktop.Controls.InputField">
    <ControlTemplate x:Key="InputFieldTemplate" TargetType="{x:Type local:InputFieldControl}">
        <ControlTemplate.Resources>
            <Style TargetType="Label">
                <Setter Property="Margin" Value="0,0,0,1"/>
                <Setter Property="MinWidth" Value="30"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Height" Value="18"/>
                <Setter Property="MinWidth" Value="30"/>
            </Style>
        </ControlTemplate.Resources>

        <StackPanel Orientation="Horizontal" Height="24">
            <Label Content="{TemplateBinding Label}" Width="{TemplateBinding LabelWidth}"/>
            <TextBox Text="{TemplateBinding Text}" Width="{TemplateBinding TextWidth}"/>
        </StackPanel>
    </ControlTemplate>

    <Style x:Key="InputFieldStyle" TargetType="{x:Type local:InputFieldControl}">
        <Setter Property="Template" Value="{StaticResource InputFieldTemplate}"/>
    </Style>

    <!--Make it the style default-->
    <Style TargetType="{x:Type local:InputFieldControl}" BasedOn="{StaticResource InputFieldStyle}"/>
</ResourceDictionary>