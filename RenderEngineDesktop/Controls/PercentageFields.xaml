<UserControl x:Class="RenderEngineDesktop.Controls.PercentageFields"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RenderEngineDesktop.Controls"
             xmlns:common="clr-namespace:RenderEngineDesktop.Models.Common"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <UserControl.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <common:SizeModel/>
    </UserControl.DataContext>

    <StackPanel>
        <Label>Percentage</Label>
        <local:InputField Text="{Binding Width}" Label="Width" LabelWidth="50"/>
        <local:InputField Text="{Binding Height}" Label="Height" LabelWidth="50"/>
    </StackPanel>
</UserControl>
