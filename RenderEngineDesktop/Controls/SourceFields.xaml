<UserControl x:Class="RenderEngineDesktop.Controls.SourceFields"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RenderEngineDesktop.Controls"
             xmlns:common="clr-namespace:RenderEngineDesktop.Models.Common"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200">
    <UserControl.DataContext>
        <common:SourceModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical"/>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Margin="0,0,0,10">
            <Label>ClientId</Label>
            <TextBox Text="{Binding ClientId}"/>
        </StackPanel>

        <local:InputField Text="{Binding Instance}" Label="Instance" LabelWidth="80" TextWidth="80"/>
        <local:InputField Text="{Binding Environment}" Label="Environment" LabelWidth="80" TextWidth="80"/>
        <local:InputField Text="{Binding Key}" Label="Key" LabelWidth="80" TextWidth="80"/>
    </StackPanel>
</UserControl>
