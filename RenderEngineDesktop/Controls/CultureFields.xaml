<local:ContextControl x:Class="RenderEngineDesktop.Controls.CultureFields"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:RenderEngineDesktop.Controls"
                xmlns:models="clr-namespace:RenderEngineDesktop.Service.Parameters.Models"
                mc:Ignorable="d"
                d:DesignHeight="35" d:DesignWidth="200">
    <UserControl.DataContext>
        <models:CultureModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <local:InputField Text="{Binding Name}" Label="CultureName" LabelWidth="80" TextWidth="80"/>
    </StackPanel>
</local:ContextControl>
