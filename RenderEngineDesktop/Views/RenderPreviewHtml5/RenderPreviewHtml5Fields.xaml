<UserControl x:Class="RenderEngineDesktop.Views.RenderPreviewHtml5.RenderPreviewHtml5Fields"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RenderEngineDesktop.Views.RenderPreviewHtml5"
             xmlns:controls="clr-namespace:RenderEngineDesktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <UserControl.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical"/>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <local:RenderPreviewHtml5ViewModel/>
    </UserControl.DataContext>

    <StackPanel DataContext="{Binding Model}">
        <controls:SourceFields Context="{Binding Source}"/>
        <controls:TemplateFields Context="{Binding Template}"/>
        <controls:CultureFields Context="{Binding Culture}"/>
    </StackPanel>
</UserControl>
