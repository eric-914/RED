<UserControl x:Class="RenderEngineDesktop.Views.RenderOutputFilesWithWaterMark.RenderOutputFilesWithWaterMarkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RenderEngineDesktop.Views.RenderOutputFilesWithWaterMark"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:RenderOutputFilesWithWaterMarkViewModel/>
    </UserControl.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <local:RenderOutputFilesWithWaterMarkFields DataContext="{Binding Model}"/>
            <Button Command="{Binding InvokeCommand}" Margin="10" IsDefault="True">Invoke</Button>
        </StackPanel>
    </DockPanel>
</UserControl>
